{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{%  block subHeader %}
    <div class="w-100 d-flex gap-5 bg-light mb-5 p-3">
        <a class="btn btn-outline-primary" role="button" href="{{ path('app_home') }}">A la une</a>
        <a class="btn btn-outline-primary" role="button" href="{{ path('app_hot') }}">Hot</a>
    </div>
{% endblock %}

{% block body %}
    <div class="d-flex flex-column gap-3 align-items-start">
        <div class="d-flex flex-column gap-5 w-100">
            {% for publication in publications %}
                {{ component('publication', {
                    publication: publication
                }) }}
            {% else %}
                <p class="text-center">Aucune publication</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

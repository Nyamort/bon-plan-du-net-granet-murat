<div class="d-flex flex-column gap-3 p-3">
    <span class="fw-bold h4">Alertes - Mes mots clés</span>
    <a href="{{ path('app_alert_new') }}" class="btn btn-primary">Ajouter un mot clé</a>
    <div class="d-flex gap-3 flex-column ">
        {% for alerte in alerts %}
            <div class="d-flex justify-content-between align-items-center w-100 border-bottom pb-2">
                <span class="h5">
                    {{ alerte.keyword }}
                </span>
                <div class="d-flex gap-3 align-items-center justify-content-between">
                    <span>
                        Notation minimum :
                        {{ alerte.minimumNotation }}
                    </span>
                    <form method="post" action="{{ path('app_alert_delete', {'id': alerte.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alerte.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

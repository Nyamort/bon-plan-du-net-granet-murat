{% extends 'base.html.twig' %}

{% block title %}Deal index{% endblock %}

{%  block subHeader %}
    <div class="topnav">
        {% if(page == 'home') %}
            <a class="active" role="button" href="{{ path('app_deal_index') }}">Nouveaux</a>
        {% else %}
            <a role="button" href="{{ path('app_deal_index') }}">Nouveaux</a>
        {% endif %}
        {% if(page == 'hot') %}
            <a class="active" role="button" href="{{ path('app_deal_hot') }}">Hot</a>
        {% else %}
            <a role="button" href="{{ path('app_deal_hot') }}">Hot</a>
        {% endif %}
    </div>
{% endblock %}

{% block body %}
    <div class="d-flex flex-column gap-3 align-items-start">
        <a class="btn btn-primary text-white" href="{{ path('app_deal_new') }}">Ajouter un bon-plan</a>
        <div class="d-flex flex-column gap-5 w-100">
            {% for deal in deals %}
                    {{ component('publication', {
                        publication: deal.publication
                    }) }}
            {% else %}
                <p class="text-center">Aucun bon-plan pour le moment</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

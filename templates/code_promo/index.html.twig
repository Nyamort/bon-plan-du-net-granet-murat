{% extends 'base.html.twig' %}

{% block title %}CodePromo index{% endblock %}

{% block body %}
    <h1>CodePromo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>ExpiredAt</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code_promo in code_promos %}
            <tr>
                <td>{{ code_promo.id }}</td>
                <td>{{ code_promo.code }}</td>
                <td>{{ code_promo.expiredAt ? code_promo.expiredAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ code_promo.value }}</td>
                <td>
                    <a href="{{ path('app_code_promo_show', {'id': code_promo.id}) }}">show</a>
                    <a href="{{ path('app_code_promo_edit', {'id': code_promo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_code_promo_new') }}">Create new</a>
{% endblock %}

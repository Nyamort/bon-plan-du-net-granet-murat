{% extends 'base.html.twig' %}

{% block title %}Code promos{% endblock %}

{%  block subHeader %}
    <div class="topnav">
        {% if(page == 'home') %}
            <a class="active" role="button" href="{{ path('app_code_promo_index') }}">Nouveaux</a>
        {% else %}
            <a role="button" href="{{ path('app_code_promo_index') }}">Nouveaux</a>
        {% endif %}
        {% if(page == 'hot') %}
            <a class="active" role="button" href="{{ path('app_code_promo_hot') }}">Hot</a>
        {% else %}
            <a role="button" href="{{ path('app_code_promo_hot') }}">Hot</a>
        {% endif %}
    </div>
{% endblock %}

{% block body %}
    <div class="d-flex flex-column gap-3 align-items-start">
        <a class="btn btn-primary text-white" href="{{ path('app_code_promo_new') }}">Ajouter un code promo</a>
        <div class="d-flex flex-column w-100 gap-5">
            {% for code_promo in code_promos %}
                {{ component('publication', {
                    publication: code_promo.publication
                }) }}
            {% else %}
                <p class="text-center">Aucun code promo pour le moment</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}

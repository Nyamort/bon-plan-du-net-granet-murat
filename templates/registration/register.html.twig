


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Login{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<main>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="fw-bold mb-2 text-uppercase">S'enregistrer</h2>
                                {{ form_start(registrationForm) }}
                                <div class="form-outline mb-4 form-floating text-light">
                                    {{ form_row(registrationForm.pseudo, {label: 'Pseudo'}) }}
                                </div>
                                <div class="form-outline mb-4 form-floating text-light">
                                    {{ form_row(registrationForm.email, {label: 'Email'}) }}
                                </div>
                                <div class="form-outline mb-4 form-floating text-light">
                                    {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                                </div>
                                    {{ form_row(registrationForm.agreeTerms) }}
                                    <button class="btn-light mb-4" type="submit">Register</button>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
</body>
</html>

